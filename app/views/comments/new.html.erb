<h1>Add comment</h1>

<% if @comment && @comment.errors.any? %>
  <ul>
  <% @comment.errors.full_messages.each do |error_message| %>
    <li><%= error_message %></li>
  <% end %>
  </ul>
<% end %>

  <%= form_for [@commentable, @comment] do |f| %>
  <%= f.label :comment, "Comment:" %><br>
  <%= f.text_area :body, size: "80x10" %><br>
  <%= f.hidden_field :commenter_id, value: current_user.id %>
  
  <%= f.submit "Add comment"%>
<% end %>