<h1>Add observation</h1>

<% if @observation && @observation.errors.any? %>
  <ul>
  <% @observation.errors.full_messages.each do |error_message| %>
    <li><%= error_message %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for [:experiment, @observation] do |f| %>
  <%= f.label :notes, "Observation notes:" %><br>
  <%= f.text_area :notes, size: "80x10" %><br>

  <%= f.hidden_field :observer_id, value: @experiment.lab_staff.id %>
  <%= f.hidden_field :experiment_id, value: @experiment.id %>
  
  <%= f.submit "Add observation"%>
<% end %>