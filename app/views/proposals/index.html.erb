<h1> Current Proposals </h1>
<% if logged_in? %>
<%= link_to "Add", new_proposal_path %>
<% end %>
<table class="active-proposals">
  <tr>
    <th></th>
    <th>Proposals</th>
    <th>Status</th>
  </tr>
  <%= render @proposals - archived_proposals(@proposals) %>
</table>



<h1> Archived Proposals</h1>
<table class="archived-proposals">
  <tr>
    <th></th>
    <th>Proposals</th>
    <th>Status</th>
  </tr>
  <%= render archived_proposals(@proposals) %>
</table>
<% if logged_in? %>
<%= link_to "Logout", logout_path, method: :delete %>
<% end %>